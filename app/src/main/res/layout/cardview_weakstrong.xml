<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="#fabb51">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/weakstrong_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:layout_weight="1"
                    android:text="31 ก.ย. 59"
                    android:textSize="22dp"
                    android:textColor="@color/White"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/LightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="4.5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/table_data_row_even"
                        android:orientation="vertical">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingLeft="2dp"
                            android:text="@string/old_left"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/textview_oldLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|bottom"
                            android:paddingRight="2dp"
                            android:text="1000000.00"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/LightGrey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/BlanchedAlmond"
                        android:orientation="vertical">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingLeft="2dp"
                            android:text="@string/income_left"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/textview_incomeLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|bottom"
                            android:paddingRight="2dp"
                            android:text="1000000.00"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/LightGrey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/table_data_row_even"
                        android:orientation="vertical">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingLeft="2dp"
                            android:text="@string/total_left"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/textview_totalLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|bottom"
                            android:paddingRight="2dp"
                            android:text="1000000.00"
                            android:textSize="16dp"/>

                        </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/LightGrey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/BlanchedAlmond"
                        android:orientation="vertical">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingLeft="2dp"
                            android:text="@string/balance_left"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/textview_left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|bottom"
                            android:paddingRight="2dp"
                            android:text="1000000.00"
                            android:textSize="16dp"/>



                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/LightGrey"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/table_data_row_even"
                        android:orientation="vertical">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingLeft="2dp"
                            android:text="@string/old_right"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/textview_oldRight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|bottom"
                            android:paddingRight="2dp"
                            android:text="1000000.00"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/LightGrey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/BlanchedAlmond"
                        android:orientation="vertical">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingLeft="2dp"
                            android:text="@string/income_right"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/textview_incomeRight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|bottom"
                            android:paddingRight="2dp"
                            android:text="1000000.00"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/LightGrey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/table_data_row_even"
                        android:orientation="vertical">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingLeft="2dp"
                            android:text="@string/total_right"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/textview_totalRight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|bottom"
                            android:paddingRight="2dp"
                            android:text="1000000.00"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/LightGrey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/BlanchedAlmond"
                        android:orientation="vertical">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingLeft="2dp"
                            android:text="@string/balance_right"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/textview_right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|bottom"
                            android:paddingRight="2dp"
                            android:text="1000000.00"
                            android:textSize="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/LightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/table_data_row_even"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:gravity="center|left"
                        android:text="@string/balance"
                        android:textSize="20dp"/>

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:id="@+id/textview_balance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right|center"
                        android:paddingRight="2dp"
                        android:text="550000.00"
                        android:textSize="20dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/BlanchedAlmond"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:gravity="center|left"
                        android:text="@string/bonus"
                        android:textSize="20dp"/>

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:id="@+id/textview_bonus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center|right"
                        android:paddingRight="2dp"
                        android:text="100000.00"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <!--</LinearLayout>-->

</android.support.v7.widget.CardView>