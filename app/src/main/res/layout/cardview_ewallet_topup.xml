<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.4">

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/topup_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="31"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"/>

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/topup_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:layout_weight="0.5"
                android:text="ก.ย. 59"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"/>

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/topup_chanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="(Brance)"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/topup_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/topup_number"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/topup_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="2dp"
                    android:gravity="right"
                    android:textSize="12dp"
                    android:text="@string/topup_by"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:text="@string/topup_cash"/>

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:id="@+id/topup_cash"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:layout_weight="1"
                        android:text="500.00"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:text="@string/topup_tranfer"/>

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:id="@+id/topup_tranfer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:layout_weight="1"
                        android:text="10000.00"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:text="@string/topup_credit"/>

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:id="@+id/topup_credit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:layout_weight="1"
                        android:text="1000.00"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:text="@string/topup_total"/>

                    <th.co.omc.memberdemo.customview.CustomTextview
                        android:id="@+id/topup_total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:layout_weight="1"
                        android:text="16000.00"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>