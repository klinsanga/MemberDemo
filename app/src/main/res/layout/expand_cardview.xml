<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:background="@drawable/click_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/upline_textview_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="bottom|left"
                            android:text="Name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="22sp"/>

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/upline_textview_side"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center"
                            android:text="(Left)"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/item_icon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:src="@drawable/ic_expand_more_black_24dp"/>

                </LinearLayout>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/upline_textview_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:layout_marginTop="6dp"
                    android:text="00000001"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:id="@+id/layout_expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="4dp">

                        <th.co.omc.memberdemo.customview.CustomTextview
                            android:id="@+id/upline_expanable_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimary"/>

                        </LinearLayout>

                </LinearLayout>

</android.support.v7.widget.CardView>