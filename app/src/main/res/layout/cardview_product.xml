<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/click_selector">

        <ImageView
            android:id="@+id/product_thumbs"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/vitamin_c"/>

        <!--<th.co.omc.memberdemo.customview.CustomTextview
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vitamin OMC"
            android:paddingLeft="10dp"
            android:textSize="18dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="รหัส C002"
                android:textSize="16dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/product_pv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="500 พีวี"
                android:textColor="@color/White"
                android:background="@drawable/edittext_border_background"/>

        </LinearLayout>

        <th.co.omc.memberdemo.customview.CustomTextview
            android:id="@+id/product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="วิตามิน C 1000 mg"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <th.co.omc.memberdemo.customview.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/product_price"
                android:textSize="16dp" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3,300 บาท"
                android:textSize="16dp"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>