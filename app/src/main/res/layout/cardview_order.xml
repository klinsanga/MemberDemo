<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.4">

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/order_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="31"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"/>

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/order_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:layout_weight="0.5"
                android:text="ก.ย. 59"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"/>

            <View
                android:id="@+id/order_color_status"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/Red"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:layout_weight="1.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/order_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/ewallet_report_note"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/order_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="@string/topup_by"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/order_pv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/ewallet_report_in"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/order_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/ewallet_report_in"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/order_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/ewallet_report_in"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/order_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="17dp"
                    android:text="@string/ewallet_report_in"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/order_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="17dp"
                    android:text="@string/ewallet_report_in"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>