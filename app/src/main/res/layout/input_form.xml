<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:orientation="vertical">

            <th.co.omc.memberdemo.customview.CustomTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_margin="8dp"
                android:text="@string/product_page_cart_detial"
                android:textSize="22dp"
                android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext_with_border"
                android:padding="1dp"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomEdittext
                    android:id="@+id/member_id"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:background="@drawable/input_edittext"
                    android:textSize="20sp"
                    android:inputType="text"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="@string/form_member_id" />

                <ImageView
                    android:id="@+id/btn_search_id"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_search_white_18dp"
                    android:background="@color/colorAccent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext_with_border"
                android:padding="1dp">

                <th.co.omc.memberdemo.customview.CustomEdittext
                    android:id="@+id/member_name"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:background="@drawable/input_edittext"
                    android:textSize="20sp"
                    android:inputType="text"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="@string/form_member_name" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext_with_border"
                android:padding="1dp">

                <Spinner
                    android:id="@+id/order_type"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/form_order_type"
                    android:padding="4dp"
                    android:inputType="text"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/textviewForError1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_down_black_18dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext_with_border"
                android:padding="1dp">

                <Spinner
                    android:id="@+id/pay_type"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:inputType="text" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/textviewForError2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_down_black_18dp"/>

            </LinearLayout>

            <th.co.omc.memberdemo.customview.CustomTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_margin="8dp"
                android:text="@string/form_recieve_product"
                android:textSize="22dp"
                android:textColor="@color/colorAccent"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/send"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="60dp"
                        android:gravity="center"
                        android:text="@string/form_radio_send_product"
                        style="@style/radionbutton"/>

                    <RadioButton
                        android:id="@+id/not_send"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="60dp"
                        android:gravity="center"
                        style="@style/radionbutton"
                        android:text="@string/form_radio_self_recieve"/>

                </RadioGroup>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textviewForError3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/radio_exist_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/form_radio_send_as_register_address"
                    android:visibility="gone"
                    style="@style/radionbutton"/>

            </LinearLayout>

            <include
                android:id="@+id/self_receive"
                android:visibility="gone"
                layout="@layout/self_receive"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <include
                android:id="@+id/send_product"
                android:visibility="gone"
                layout="@layout/send_product"/>

        </LinearLayout>

</LinearLayout>