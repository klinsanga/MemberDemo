<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="#fabb51">

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/clarify_recieve_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:layout_weight="9"
                android:text="STHONLIN1609000006"
                android:textSize="20dp"
                android:textColor="@color/White"/>

            <th.co.omc.memberdemo.customview.CustomTextview
                android:id="@+id/clarify_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="No.10"
                android:textSize="16dp"
                android:textColor="@color/White"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:paddingLeft="10dp"
                android:background="@color/table_data_row_even"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/clarify_recieve_id"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/clarify_recieve_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="0000001"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/clarify_recieve_name"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/clarify_recieve_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="Clarify Demo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:paddingLeft="10dp"
                android:background="@color/BlanchedAlmond"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/clarify_recieve_save"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/clarify_recieve_save"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:textSize="22dp"
                    android:text="0000001"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:paddingLeft="10dp"
                android:background="@color/table_data_row_even"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/clarify_recieve_type"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/clarify_recieve_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:textSize="22dp"
                    android:text="Normal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:paddingLeft="10dp"
                android:background="@color/BlanchedAlmond"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/clarify_recieve_buy_date"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/clarify_recieve_buy_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:textSize="22dp"
                    android:text="200,000.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:paddingLeft="10dp"
                android:background="@color/table_data_row_even"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/clarify_recieve_pv"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/clarify_recieve_pv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:textSize="22dp"
                    android:text="0.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:paddingLeft="10dp"
                android:background="@color/BlanchedAlmond"
                android:orientation="horizontal">

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textSize="18dp"
                    android:text="@string/clarify_recieve_price"/>

                <th.co.omc.memberdemo.customview.CustomTextview
                    android:id="@+id/clarify_recieve_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:textSize="22dp"
                    android:text="999.99"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>